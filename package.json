{
  "name": "university-job-platform",
  "private": true,
  "version": "1.0.0",
  "description": "University student job application platform",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon server.js",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "server": "node server.js",
    "dev:server": "nodemon server.js",
    "data:import": "node server/data/seeder.js",
    "data:destroy": "node server/data/seeder.js -d",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:server\"",
    "setup": "npm install && node server/config/checkSetup.js",
    "check-mongodb": "node server/config/checkMongoDB.js",
    "start": "node server.js",
    "test": "node --experimental-vm-modules node_modules/mocha/bin/mocha.js --experimental-specifier-resolution=node tests/**/*.test.js --timeout 10000"
  },
  "dependencies": {
    "@heroicons/react": "^2.1.1",
    "@tailwindcss/forms": "^0.5.7",
    "axios": "^0.27.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.5.0",
    "multer": "^1.4.5-lts.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.22.3",
    "react-transition-group": "^4.4.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "chai": "^4.5.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.9.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "mocha": "^10.8.2",
    "nodemon": "^2.0.19",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "vite": "^5.4.17"
  }
}
